{
    "name": "SagarXTools",
    "short_name": "SagarX",
    "description": "All-in-one toolset by SagarX with full PWA support.",
    "start_url": "./index.html",
    "display": "standalone",
    "display_override": [
        "standalone",
        "browser"
    ],
    "background_color": "#ffffff",
    "theme_color": "#000000",
    "icons": [
        {
            "src": "icons/icon-192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "icons/icon-512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "screenshots": [
        {
            "src": "screenshots/screenshot1.png",
            "sizes": "540x720",
            "type": "image/png"
        }
    ],
    "iarc_rating_id": "eC2023",
    "prefer_related_applications": true,
    "related_applications": [
        {
            "platform": "play",
            "url": "https://play.google.com/store/apps/details?id=com.example.sagarx",
            "id": "com.example.sagarx"
        }
    ],
    "scope": "./",
    "scope_extensions": [
        {
            "origin": "https://sagarxtools.blogspot.com"
        }
    ],
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "shortcuts": [
        {
            "name": "Convert JPG to PNG",
            "url": "/?tool=jpg-to-png",
            "icons": [
                {
                    "src": "icons/icon-192.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "file_handlers": [
        {
            "action": "/handle-file",
            "accept": {
                "image/*": [
                    ".jpg",
                    ".png"
                ]
            }
        }
    ],
    "handle_links": "preferred",
    "protocol_handlers": [
        {
            "protocol": "web+sagarx",
            "url": "/?link=%s"
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "name",
            "text": "description",
            "url": "link"
        }
    },
    "widgets": [
        {
            "name": "Tool Widget",
            "description": "A widget to launch your favorite tool",
            "url": "/widget.html"
        }
    ]
}
